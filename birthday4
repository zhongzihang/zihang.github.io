    <script>
        // éŸ³ä¹åº“
        const musicTracks = [
            'https://cdn.pixabay.com/audio/2023/03/27/audio_8b3c9c1c0f.mp3',
            'https://cdn.pixabay.com/audio/2023/04/07/audio_3f6e0c7c03.mp3',
            'https://cdn.pixabay.com/audio/2023/05/15/audio_6e9b4c3a4a.mp3'
        ];

        // ç²’å­ç³»ç»Ÿ
        function createParticles(x, y) {
            for(let i=0; i<50; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.cssText = `
                    left: ${x}px;
                    top: ${y}px;
                    width: ${Math.random()*10+5}px;
                    height: ${Math.random()*10+5}px;
                    background: hsl(${Math.random()*360}, 100%, 70%);
                    border-radius: 50%;
                    --tx: ${(Math.random()-0.5)*200}px;
                    --ty: ${(Math.random()-0.5)*200}px;
                `;
                document.body.appendChild(particle);
                setTimeout(() => particle.remove(), 1500);
            }
        }

        // éŸ³ä¹æ§åˆ¶
        let currentTrack = 0;
        const bgm = document.getElementById('bgm');
        
        function changeTrack(index) {
            currentTrack = index;
            document.getElementById('musicSrc').src = musicTracks[index];
            bgm.load();
            bgm.play();
        }

        // åˆå§‹åŒ–éŸ³ä¹
        changeTrack(0);

        // ç‚¹å‡»ç‰¹æ•ˆ
        document.addEventListener('click', (e) => {
            createParticles(e.clientX, e.clientY);
        });

        // è‡ªåŠ¨ç¥ç¦è¯­è½®æ’­
        const messages = [
            "æ„¿ä½ çš„ç¬‘å®¹æ°¸è¿œç¿çƒ‚å¦‚æ˜Ÿâœ¨",
            "æ–°çš„ä¸€å²ç»§ç»­é—ªé—ªå‘å…‰ğŸŒŸ",
            "æ‰€æœ‰ç¾å¥½éƒ½ä¼šå¦‚æœŸè€Œè‡³ğŸ",
            "æ¯ä¸€å¤©éƒ½å€¼å¾—è¢«åº†ç¥ğŸ‰"
        ];

        let msgIndex = 0;
        setInterval(() => {
            document.getElementById('message').textContent = messages[msgIndex];
            msgIndex = (msgIndex + 1) % messages.length;
        }, 3000);
    </script>
