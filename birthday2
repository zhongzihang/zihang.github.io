        // ç”Ÿæˆç¥ç¦
        function generateMagic() {
            const name = document.getElementById('name').value || 'äº²çˆ±çš„æœ‹å‹';
            const age = document.getElementById('age').value;
            const messageDiv = document.getElementById('message');
            
            // æ¸…ç©ºæ—§å†…å®¹
            messageDiv.innerHTML = '';
            
            // ç”Ÿæˆæ–°ç¥ç¦
            const template = templates[Math.floor(Math.random() * templates.length)];
            messageDiv.innerHTML = template(name, age);
            
            // è§¦å‘åŠ¨ç”»
            messageDiv.style.opacity = '1';
            messageDiv.style.transform = 'translateY(0)';
            
            // æ·»åŠ ç‰¹æ•ˆ
            createConfetti();
            addSparkles();
        }

        // åˆ›å»ºå½©çº¸ç‰¹æ•ˆ
        function createConfetti() {
            for(let i=0; i<50; i++) {
                const confetti = document.createElement('div');
                confetti.className = 'confetti';
                confetti.style.cssText = `
                    left: ${Math.random() * 100}%;
                    background: ${getRandomColor()};
                    animation-duration: ${Math.random() * 3 + 2}s;
                `;
                document.body.appendChild(confetti);
                setTimeout(() => confetti.remove(), 3000);
            }
        }

        // éšæœºé¢œè‰²
        function getRandomColor() {
            return `hsl(${Math.random() * 360}, 70%, 60%)`;
        }

        // æ·»åŠ æ˜Ÿå…‰
        function addSparkles() {
            const sparkles = ['âœ¨', 'ğŸŒŸ', 'ğŸ’«', 'â­'];
            for(let i=0; i<15; i++) {
                const spark = document.createElement('div');
                spark.textContent = sparkles[Math.floor(Math.random() * sparkles.length)];
                spark.style.cssText = `
                    position: fixed;
                    left: ${Math.random() * 100}%;
                    top: ${Math.random() * 100}%;
                    font-size: ${Math.random() * 24 + 16}px;
                    animation: sparkle ${Math.random() * 0.5 + 0.3}s ease-out;
                    opacity: 0;
                `;
                document.body.appendChild(spark);
                setTimeout(() => spark.remove(), 500);
            }
        }
